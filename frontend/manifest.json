{
  "name": "HMIS - Hospital Management Information System",
  "short_name": "HMIS",
  "description": "Comprehensive Hospital Management Information System with real-time features, security, and mobile optimization",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["healthcare", "medical", "productivity", "business"],
