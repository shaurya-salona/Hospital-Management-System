    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "HMIS Desktop Dashboard"
    },
    {
      "src": "screenshots/mobile-dashboard.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "HMIS Mobile Dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "Patient Dashboard",
      "short_name": "Patients",
      "description": "Access patient management dashboard",
      "url": "/patient-dashboard.html",
      "icons": [
        {
          "src": "icons/patient-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Doctor Portal",
      "short_name": "Doctor",
      "description": "Access doctor portal",
      "url": "/doctor-dashboard.html",
      "icons": [
        {
          "src": "icons/doctor-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Emergency Alerts",
      "short_name": "Emergency",
      "description": "View emergency alerts",
      "url": "/emergency-alerts.html",
      "icons": [
        {
          "src": "icons/emergency-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Reports",
      "short_name": "Reports",
      "description": "Access reporting dashboard",
      "url": "/reports.html",
      "icons": [
        {
          "src": "icons/reports-shortcut.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://hmis.hospital.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/csv": [".csv"],
        "application/pdf": [".pdf"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+hmis",
      "url": "/protocol-handler?protocol=%s"
    }
  ]
}


