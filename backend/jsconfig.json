{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "types": [],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@/config/*": [
                "./config/*"
            ],
            "@/controllers/*": [
                "./controllers/*"
            ],
            "@/models/*": [
                "./models/*"
            ],
            "@/routes/*": [
                "./routes/*"
            ],
            "@/middlewares/*": [
                "./middlewares/*"
            ],
            "@/utils/*": [
                "./utils/*"
            ]
        }
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        "logs",
        "tests"
    ]
}
